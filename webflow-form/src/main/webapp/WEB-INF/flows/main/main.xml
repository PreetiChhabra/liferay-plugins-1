<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="form" class="org.rsc.liferay.webflowform.FormBean"/>

	<view-state id="stepOne" model="FormStepOne">
		<on-render>
			<evaluate expression="formService.buildStepOne()"
				result="requestScope.form" />
		</on-render>
		<transition on="next" to="stepTwo">
			<evaluate expression="formService.validateStepOne(form)" />
		</transition>
		<transition on="cancel" to="cancel" bind="false" />
	</view-state>

	<view-state id="stepTwo">
		<transition on="previous" to="stepOne">
		</transition>
		<transition on="next">
			<evaluate expression="searchCriteria.nextPage()" />
		</transition>
	</view-state>

	<action-state id="cancel">
		<transition on="success" to="enterSearchCriteria" />
	</action-state>

	<end-state id="finish" />

</flow>